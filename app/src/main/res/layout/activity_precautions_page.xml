<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Precautions_Page"
    android:background="@drawable/precautions_page_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:padding="10sp"
            android:background="@drawable/precautions_rectangle_box"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="For individuals with diabetes, managing their condition requires a combination of lifestyle modifications, medication adherence, and regular monitoring. Here are some precautions that people with diabetes should consider:"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Regular Blood Sugar Monitoring: Keeping track of blood sugar levels regularly helps individuals understand how their bodies respond to different foods, activities, and medications."
            android:textColor="@color/white"
            android:textSize="17sp"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Healthy Eating Habits: Following a well-balanced diet rich in fruits, vegetables, lean proteins, and whole grains can help manage blood sugar levels. Limiting the intake of sugary and processed foods is essential."
            android:textColor="@color/white"
            android:textSize="17sp"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="For individuals with diabetes, managing their condition requires a combination of lifestyle modifications, medication adherence, and regular monitoring. Here are some precautions that people with diabetes should consider:"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Regular Exercise: Physical activity helps control blood sugar levels, improves circulation, and promotes overall health. Aim for at least 30 minutes of moderate-intensity exercise most days of the week."
            android:textColor="@color/white"
            android:textSize="17sp"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Medication Adherence: Take prescribed medications as directed by the healthcare provider. Skipping doses or altering the dosage without medical advice can lead to fluctuations in blood sugar levels"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Foot Care: People with diabetes are at a higher risk of foot problems due to nerve damage and poor circulation. Inspect feet regularly for cuts, sores, or signs of infection, and wear comfortable shoes that fit well."
            android:textColor="@color/white"
            android:textSize="17sp"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="By following these precautions and working closely with healthcare providers, individuals with diabetes can effectively manage their condition and reduce the risk of complications."
            android:textColor="@color/white"
            android:textSize="17sp"
            android:justificationMode="inter_word"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40sp"/>



    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>