<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeColor="@color/black"
    app:strokeWidth="2dp"
    app:cardCornerRadius="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#faf9f9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/diet_type"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your preffered diet type?"
            android:textSize="20sp"
            android:textColor="#343a40"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="15dp"
            android:textStyle="italic"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/Vegetarian_Checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="VEGETARIN"
            android:textStyle="italic|bold"
            android:layout_marginStart="10sp"
            android:textColor="#2d6a4f"
            android:textSize="15dp" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/Non_Vegetarian_Checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="NON - VEGETARIN"
            android:textStyle="italic|bold"
            android:layout_marginStart="10sp"
            android:textColor="#8c1c13"
            android:textSize="15dp" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/Flexitarian_Checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FLEXITARIN"
            android:layout_marginStart="10sp"
            android:textStyle="italic"
            android:textColor="#fb8b24"
            android:textSize="15dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Dialog_Submit_btn"
            android:layout_width="wrap_content"
            app:toggleCheckedStateOnClick="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="SUBMIT"
            android:textColor="#390099"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            app:strokeColor="#390099"
            app:strokeWidth="3dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>