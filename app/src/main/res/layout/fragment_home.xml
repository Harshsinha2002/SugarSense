<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Home_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="50dp"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Assistance_cardview"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="-35dp"
                app:cardCornerRadius="45dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="55dp"
                        android:text="@string/welcome_back"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/Profile_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif"
                        android:text="How are you feeling today??"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="italic" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="25dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/Health_Risk_cardview"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="20dp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/white">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/health_risks_img"
                                    android:padding="10sp"
                                    android:layout_gravity="center"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Health Risks"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue"
                                    android:gravity="center"/>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/Precautions_cardview"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="30sp"
                            app:cardCornerRadius="20dp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/white">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/guide_lines_img"
                                    android:padding="5sp"
                                    android:layout_gravity="center"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Precautions"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue"
                                    android:gravity="center"/>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/Medical_Assistance_Cardview"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="30sp"
                            app:cardCornerRadius="20dp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/white">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/doctor_assistance_img"
                                    android:layout_gravity="center"
                                    android:padding="5dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Assistance"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue"
                                    android:gravity="center"/>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/Diet_Plans_cardview"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="30sp"
                            android:layout_marginEnd="55dp"
                            app:cardCornerRadius="20dp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/white">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/diet_plan_img"
                                    android:layout_gravity="center"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Diet Plans"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue"
                                    android:gravity="center"/>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </HorizontalScrollView>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stats"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="25dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7 Million"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="#212529"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:text="Active Cases"
                        android:textAlignment="center"
                        android:textColor="#6c757d"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.5 Million"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="#212529"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:text="Diabetes Type 1"
                        android:textAlignment="center"
                        android:textColor="#6c757d"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4.2 Million"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="#212529"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Diabetes Type 2"
                        android:textAlignment="center"
                        android:textColor="#6c757d"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OUR VISION IS TO MAKE INDIA DIABETES FREE"
                android:textSize="15dp"
                android:textColor="#31572c"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10sp"
                android:textAlignment="center"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Diabetes_Risk_Analysis_cardview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:strokeColor="#242423"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/diabetes_risk_analysis_bg"/>


                    <TextView
                        android:layout_width="367dp"
                        android:layout_height="115dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="center"
                        android:text="@string/diabetes_risk_analysis"
                        android:textColor="#10002b"
                        android:textSize="20sp" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Report_Analysis_cardview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:strokeColor="#242423"
                app:strokeWidth="2dp"
                android:layout_marginBottom="125dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/report_analysis_background"/>

                <TextView
                    android:layout_width="367dp"
                    android:layout_height="115dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="@string/your_analysis_report"
                    android:textColor="#10002b"
                    android:textSize="20sp" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>